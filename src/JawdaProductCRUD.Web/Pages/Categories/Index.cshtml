@page
@using JawdaProductCRUD.Localization
@using JawdaProductCRUD.Permissions
@using JawdaProductCRUD.Web.Pages.Categories
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<JawdaProductCRUDResource> L
@*@inject ILocalizationService CategoryizationService*@
@model IndexModel

@section scripts
{
    <abp-script src="/Pages/Categories/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Categories"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
               
                    <abp-button id="NewCategoryButton"
                                text="@L["NewCategory"].Value"
                                icon="plus"
                                button-type="Primary" />
                 
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="CategoriesTable"></abp-table>
    </abp-card-body>
</abp-card>
