@page
@using JawdaProductCRUD.Localization
@using JawdaProductCRUD.Web.Pages.Categories
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<JawdaProductCRUDResource> L
@{
    Layout = null;
}
<form asp-page="/Categories/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCategory"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Category.title" />
         </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
